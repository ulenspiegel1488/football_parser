{
  "version": 1,
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "plain",
      "level": "WARNING",
      "stream": "ext://sys.stdout"
    },
    "file" : {
      "class": "logging.FileHandler",
      "formatter": "detailed",
      "filename": "../logs/app.log",
      "level": "INFO"
    }
  },
  "loggers": {
    "root": {},
    "__main__": {
      "level": "INFO",
      "handlers": ["console", "file"]
    }
  },
  "formatters" : {
    "plain": {
      "format": "%(asctime)s - %(message)s"
    },
    "detailed": {
      "format": "%(asctime)s - %(module)s,%(levelname)s - %(message)s"
    }
  }
}